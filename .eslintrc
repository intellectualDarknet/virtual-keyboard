{
    "extends": ["airbnb-typescript", "plugin:import/recommended", "prettier"],
    "rules": {
      "max-len": [
        "error",
        {
          "code": 140
        }
      ],
      "react/jsx-filename-extension": [0],
      "prettier/prettier": "error",
      "semi": ["error", "always"],
      "quotes": ["error", "single"]
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "project": ["./tsconfig.json"]
    },
    "plugins": ["import", "prettier"],
    "env": {
      "es6": true
    }
}